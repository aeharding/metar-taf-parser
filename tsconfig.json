{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*", "tests/*"]
    },
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "tests"]
}
